        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"donor@x.com\",\n  \"password\": \"Min8chars!\",\n  \"role\": \"DONOR_BIZ\",\n  \"name\": \"Quán Cơm A\",\n  \"phone\": \"0900000000\",\n  \"lat\": 10.762622,\n  \"lng\": 106.660172,\n  \"address_hint\": \"Near Ben Thanh Market\"\n}"
        }
      }
    },
    {
      "name": "Login User",
      "request": {
        "method": "POST",
